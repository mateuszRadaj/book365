@page
@model MyLibraryApp.Pages.Books.IndexModel
@{
    ViewData["Title"] = "shopping page";
}

<h1>Koszyk</h1>

<table class="table table-bordered table-striped mt-5">
    <thead>
        <tr>
            <th>
                Numer
            </th>
            <th>
                Tytuł
            </th>
            <th>
                Autor
            </th>
            <th>
                Cena
            </th>
        </tr>
    </thead>
    @foreach (var obj in Model.Books)
    {
        if(obj.Id %2 == 0)
        {
            break;
        }

        <tbody>
            <tr>
                <td width="10%">@obj.Id</td>
                <td width="38%">@obj.Title</td>
                <td width="38%">@obj.Author</td>
                <td width="14%">35 zł</td>
            </tr>
        </tbody>
    }

</table>


<div class="text-end">
    <button type="button" class="btn pay-btn">Zapłać</button>
</div>