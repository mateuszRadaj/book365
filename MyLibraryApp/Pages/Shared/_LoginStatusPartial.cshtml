@{
    if (User.Identity.IsAuthenticated)
    {
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Books/Rented">Moje książki</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Info">Moje konto</a>
            </li>
            <li class="nav-item">
                <form method="post" class="form-inline" asp-page="/Account/Logout">
                    <button type="submit" class="btn btn-link text-dark">Wyloguj się</button>
                </form>
            </li>
        </ul>
    }
    else
    {
        <div style="display: flex; justify-content: flex-end">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Account/Login">Zaloguj się</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Account/Register">Zarejestuj się</a>
                    </li>
                </ul>
            </div>
        </div>
    }
}
